<script>
    // BANCO DE DADOS EXPANDIDO 2026
    const dados = {
        treinos: [
            { id: 1, t: "Hipertrofia", d: "Supino: 4x10, Agachamento: 4x12, Remada: 4x10" },
            { id: 2, t: "Funcional", d: "Burpees: 3x15, Prancha: 1min, Corda: 2min" },
            { id: 3, t: "Flexibilidade", d: "Yoga (Sauda√ß√£o ao Sol), Alongamento de Lombar e Pernas" },
            { id: 4, t: "Resist√™ncia", d: "Corrida: 5km, Flex√µes: 3x m√°ximo, Abdominais: 4x25" }
        ],
        dietas: [
            { id: 10, t: "Low Carb", d: "Ovos mexidos, Frango com Legumes, Mix de Nozes" },
            { id: 11, t: "Bulking (Massa)", d: "Mingau de aveia, Arroz, Feij√£o, Carne e Pasta de Amendoim" },
            { id: 12, t: "Vegana", d: "Bowl de Gr√£o-de-Bico, Quinoa com Vegetais, Shake de Prote√≠na Ervilha" },
            { id: 13, t: "Jejum Intermitente", d: "Janela 16/8: Prote√≠nas magras e muita hidrata√ß√£o" }
        ]
    };

    let itemAtual = null;

    // FUN√á√ÉO PARA GERAR OP√á√ïES
    function gerar(tipo) {
        const lista = tipo === 'treino' ? dados.treinos : dados.dietas;
        itemAtual = lista[Math.floor(Math.random() * lista.length)];
        
        document.getElementById('res-titulo').innerText = (tipo === 'treino' ? "üèãÔ∏è " : "ü•ó ") + itemAtual.t;
        document.getElementById('res-corpo').innerText = itemAtual.d;
        document.getElementById('btn-salvar').style.display = "block";
    }

    // FUN√á√ÉO PARA SALVAR NO NAVEGADOR (localStorage)
    function salvarNoPerfil() {
        if (!itemAtual) return;
        
        let salvos = JSON.parse(localStorage.getItem('fitlens_salvos')) || [];
        salvos.push({ ...itemAtual, data: new Date().toLocaleDateString() });
        
        localStorage.setItem('fitlens_salvos', JSON.stringify(salvos));
        alert("Salvo com sucesso no seu perfil!");
        carregarPerfil();
    }

    // CARREGAR DADOS DO PERFIL
    function carregarPerfil() {
        const listaUI = document.getElementById('perfil-lista');
        const salvos = JSON.parse(localStorage.getItem('fitlens_salvos')) || [];
        
        if (salvos.length === 0) {
            listaUI.innerHTML = "Nenhum plano salvo ainda.";
            return;
        }

        listaUI.innerHTML = salvos.map(item => `
            <div class="saved-item">
                <strong>${item.t}</strong> (${item.data})<br>
                <small>${item.d}</small>
            </div>
        `).reverse().join('');
    }

    function limparPerfil() {
        localStorage.removeItem('fitlens_salvos');
        carregarPerfil();
    }

    // Inicia o perfil ao abrir a p√°gina
    carregarPerfil();
</script>

